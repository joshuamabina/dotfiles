"
" General
"
set visualbell
highlight Bell display:none

set editor='bl-text-editor'
set hintchars='hfjdksla'

set hlsearch
set focuscontent
set defsearch=duckduckgo

set gui=none
set guioptions=nbr
set! javascript.options.jit.chrome=true

highlight CmdLine background: black; color: #ccc; transition: all 0.25s;

"
" Mappings
"

" Resets
map d <Nop>
map <C-h> <Nop>
map <C-k> <Nop>
map <C-j> <Nop>
map <C-n> <Nop>
map <C-p> <Nop>
map <C-r> <Nop>
map <C-s> <Nop>
map <C-t> <Nop>
map <C-v> <Nop>
map <C-w> <Nop>
map <C-x> <Nop>
map <C-S-h> <Nop>
map <C-S-o> <Nop>
map <F5> <Nop>

nnoremap ZZ :q<CR>
nnoremap <F5> :source $HOME/.vimperatorrc<CR>

" Ctrl-P: fuzzy-find through all buffers
nnoremap <C-p> :ls<CR> 

" Scrolling
map j 5<C-e>
map k 5<C-y>

" Clipboard
"map <C-c> <C-v><C-c>
"map <C-v> <C-v><C-v>

nnoremap <A-y> :js util.copyToClipboard(buffer.title + '\u0020(' + buffer.URL + ')', true)<CR>
nnoremap Y :js util.copyToClipboard(buffer.title, true)<CR>

"
" Qmarks
"

qmark g https://github.com
qmark n https://news.ycombinator.com
