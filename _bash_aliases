#Functions

#
# Create and change the current working directory.
#
# @param /path/to/directory
#
mkcdir() {
    if [ ! $1 ]; then

        echo "Whoops! Try mkcdir </path/to/directory>"

    else

        mkdir -p -- "$1" && cd "$1"

    fi
}

#
# Git reset current HEAD to previous state.
#
# @param number of commits
#
stfu() {
    STFU_CMD="git reset HEAD"

    if [ ! $1 ]; then

        $(${STFU_CMD})

    else

        STFU_CMD="${STFU_CMD}~$1"
        $(${STFU_CMD})

    fi
}

