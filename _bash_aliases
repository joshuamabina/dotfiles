# Alias editing
alias so='source $HOME/.bashrc'

# Global
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias less='less -r'

alias ed='editor .'

# Directory listing
alias la='ls -ali'
alias ll='ls -l'
alias ls='ls -Fsh -t --group-directories-first'

# Git
alias g='git'
alias ga='git add'
alias gash='git stash'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gd='git diff'
alias gds='git diff --staged'
alias get='git clone'
alias gl='git log'
alias glo='git log --oneline'
alias gout='git checkout'
alias gs='git status'
alias fu='git reset --hard && git clean -df'
alias pull='git pull'
alias push='git push'

# YouTube-dl
alias yt='/usr/local/bin/youtube-dl -q'

# JavaScript
alias dev='yarn dev'
alias watch='yarn watch'

# Composer
alias require='composer require'
alias require-dev='composer require --dev'

# Laravel
alias artisan='php artisan'
alias fresh='php artisan migrate:fresh --seed'
alias migrate='php artisan migrate --seed'
alias tinker='php artisan tinker'
alias seed='php artisan db:seed'
alias serve='php artisan serve'

