# Alias  Editing
alias reload='source $HOME/.bashrc'

# Global
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias less='less -r'

# listing directory contents
alias la='ls -ali'
alias ll='ls -l'
alias ls='ls -Fsh -t --group-directories-first'

# Git
alias g='git'
alias gc='git clone'
alias gs='git status'
alias fu='git reset --hard && git clean -df'

# YouTube-dl
alias yt='/usr/local/bin/youtube-dl -q'

# Laravel
alias artisan='php artisan'
