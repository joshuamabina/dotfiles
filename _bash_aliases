# Alias editing
alias reload='source $HOME/.bashrc'

# Global
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias less='less -r'

# Directory listing
alias la='ls -ali'
alias ll='ls -l'
alias ls='ls -Fsh -t --group-directories-first'

# Git
alias g='git'
alias gc='git clone'
alias gs='git status'
alias fu='git reset --hard && git clean -df'

# YouTube-dl
alias yt='/usr/local/bin/youtube-dl -q'

# TODO: Composer

# Laravel
alias artisan='php artisan'
alias fresh='php artisan migrate:fresh --seed'
alias migrate='php artisan migrate --seed'
alias tinker='php artisan tinker'
alias serve='php artisan serve'

# PHPUnit
alias test='phpunit'
alias testf='phpunit --filter'
