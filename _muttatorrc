"
" General
"

set focuscontent

set editor='bl-text-editor'
set hintchars='hfjdksla'

set newtab=''
set noscrollbars
set shell="$SHELL"

set history=1000000
set gui=none

"
" Mappings
"

let mapleader=','
let g:mapleader=','

" Reload MYMUTTATORRC
noremap <leader>R :source "$MYMUTTATORRC"<CR>

noremap > 30l
noremap < 30h

cnoremap <C-i> <Tab>
cnoremap <C-o> <S-Tab>
cnoremap <C-p> <Up>
cnoremap <C-n> <Down>

noremap <BS> <NOP>

echo "muttatorrc loaded"

" vim: ft=vimperator softtabstop=4 shiftwidth=4 expandtab autoindent
